#include <stdio.h>

int main() {
    int n ;
    printf("Enter a odd number");
    scanf("%d",&n);

    for (int i = 1; i <= n; i++) 
    {
        if (i <= (n/2 + 1)) 
        {
            for (int j = 1; j <= 2*i - 1; j++) 
                printf("*");
        } 
        
        else 
        {
            for (int j = 1; j <= 2*(n - i) + 1; j++) 
                printf("*");   
        }
        printf("\n");
    }

    return 0;
}
