#include <stdio.h>

int main(){
    int n,pos=0,neg=0,zero=0;
    printf("Enter size of array");
    scanf("%d",&n);
    
    if(n==0)
    {
    printf("size cants be zero");
    return 1;
    }

    int arr[n];
    printf("Enter elements of array");
    for (int i = 0; i < n; i++)
    {
        scanf("%d",&arr[i]);
        if(arr[i]>0)
        pos++;
        else if(arr[i]<0)
        neg++;
        else
        zero++;
    }
    printf("Positive=%d, Negative=%d, Zero=%d",pos,neg,zero);
    
    return 0;
}
