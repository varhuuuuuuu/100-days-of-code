#include <stdio.h>

int main() {
    int n;
    printf("Enter the number of terms: ");
    scanf("%d", &n);

    double sum = 0.0;
    double current_term = 1.32; 


    for (int i = 0; i < n; i++) {
        sum += current_term;
        current_term -= 0.22; 
    }

    printf("Approximate sum: %g\n", sum);

    return 0;
}
